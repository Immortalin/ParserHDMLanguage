def log_depth_adder_aux(A, B, C) =
  let N = #A in
  if N = 1 then
    let P = A^B in
    P, A&B, P^C
  else
    let H = N / 2  in
    let P1, G1, S1 = log_depth_adder_aux(A[H-1..0], B[H-1..0], C) in
    let P2, G2, S2 = log_depth_adder_aux(A[N-1..H], B[N-1..H], G1 | C&P1) in
    P1&P2, G2 | G1&P2, S2@S1